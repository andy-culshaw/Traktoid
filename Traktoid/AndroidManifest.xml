<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.florianmski.tracktoid"
      android:versionCode="13"
      android:versionName="0.7.0.1338"
      android:installLocation="preferExternal">
      
    <uses-sdk android:minSdkVersion="4"
     android:targetSdkVersion="14" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application 	
    	android:icon="@drawable/icon" 
		android:label="@string/app_name" 
		android:theme="@style/Theme.Traktoid"
		android:name=".TraktoidApplication"
        android:hardwareAccelerated="true">

        <activity android:name=".ui.activities.LibraryActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".ui.activities.SearchActivity" android:label="Search"></activity>
        <activity android:name=".ui.activities.CalendarActivity" android:label="Calendar"></activity>
        <activity android:name=".ui.activities.ShowActivity"></activity>
        <activity android:name=".ui.activities.TraktItemsActivity"></activity>
        <activity android:name=".ui.activities.MovieActivity"></activity>
        <activity android:name=".ui.activities.SeasonActivity"></activity>
        <activity android:name=".ui.activities.EpisodeActivity"></activity>
        <activity android:name=".ui.activities.SettingsActivity" android:label="Settings"></activity>
        <activity android:name=".ui.activities.RecommendationActivity" android:label="Recommendation" android:uiOptions="splitActionBarWhenNarrow"></activity>
        <activity android:name=".ui.activities.AboutActivity" android:label="About"></activity>
        <activity android:name=".ui.activities.LoginActivity" android:label="Login"></activity>
        <activity android:name=".ui.activities.ShoutsActivity" android:label="Shouts" android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity android:name=".ui.activities.TrendingActivity" android:label="Trending" ></activity>

    </application>
</manifest>