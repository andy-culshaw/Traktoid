<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/action_bar_background</item>
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="titleTextStyle">@style/Traktoid.PrimaryText.Medium.Bold</item>
        <item name="subtitleTextStyle">@style/Traktoid.SecondaryText.Small</item>
        <item name="android:titleTextStyle">@style/Traktoid.PrimaryText.Medium.Bold</item>
        <item name="android:subtitleTextStyle">@style/Traktoid.SecondaryText.Small</item>
        <item name="icon">@drawable/gd_action_bar_list</item>
        <item name="android:icon">@drawable/gd_action_bar_list</item>
        <item name="actionBarItemBackground">@drawable/selector_no_background</item>
        <item name="android:actionBarItemBackground">@drawable/selector_no_background</item>
    </style>

    <style name="Theme.Traktoid" parent="@style/Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:windowBackground">@color/action_bar_background_color</item>
        <item name="android:progressBarStyle">@style/TraktoidProgressBar</item>
        <item name="android:listViewStyle">@style/TraktoidListView</item>
        <item name="android:gridViewStyle">@style/TraktoidGridView</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
        <item name="android:scrollbarThumbVertical">@drawable/gradient_progress</item>
    </style>

    <style name="TraktoidProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="TraktoidListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/selector_list</item>
        <item name="android:cacheColorHint">@color/list_cache_color_hint_color</item>
        <item name="android:divider">@color/list_divider_color</item>
        <item name="android:dividerHeight">@dimen/default_title_indicator_footer_line_height</item>
    </style>

    <style name="TraktoidGridView" parent="@android:style/Widget.GridView">
        <item name="android:listSelector">@drawable/selector_list</item>
        <item name="android:cacheColorHint">@color/list_cache_color_hint_color</item>
    </style>

    <style name="DashboardButton" parent="@style/Traktoid.SecondaryText.Medium">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector_home_btn</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:background">#5F000000</item>
        <item name="footerColor">@color/footer_color</item>
        <item name="footerLineHeight">@dimen/default_title_indicator_footer_line_height</item>
        <item name="footerIndicatorHeight">@dimen/default_title_indicator_footer_indicator_height</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="selectedColor">@color/primary_text_color</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="CustomCirclePageIndicator"></style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="footerColor">@color/footer_color</item>
        <item name="footerLineHeight">@dimen/default_title_indicator_footer_line_height</item>
        <item name="footerIndicatorStyle">@integer/default_title_indicator_footer_indicator_style</item>
        <item name="footerIndicatorHeight">@dimen/default_title_indicator_footer_indicator_height</item>
        <item name="footerIndicatorUnderlinePadding">@dimen/default_title_indicator_footer_indicator_underline_padding</item>
        <item name="selectedBold">@bool/default_title_indicator_selected_bold</item>
    </style>
    
    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">@color/footer_color</item>
        <item name="fades">false</item>
    </style>

    <!-- <style name="CustomTabPageIndicator.Text" parent="Widget.TabPageIndicator.Text"> -->
    <!-- <item name="android:textColor">#AAFFFFFF</item> -->
    <!-- <item name="android:textSize">@dimen/default_title_indicator_text_size</item> -->
    <!-- </style> -->

    <style name="Traktoid.PrimaryText.Big" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Traktoid.PrimaryText.Big.Bold" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Traktoid.PrimaryText.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Traktoid.PrimaryText.Medium.Bold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Traktoid.PrimaryText.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="Traktoid.PrimaryText.Small.Bold" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Traktoid.SecondaryText.Big" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Traktoid.SecondaryText.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Traktoid.SecondaryText.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:shadowColor">@color/primary_text_color</item>
    </style>

</resources>