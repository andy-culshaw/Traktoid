<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Traktoid" parent="Theme._Traktoid"/>

    <style name="Theme._Traktoid" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Show" parent="Theme.Traktoid">
        <item name="colorPrimary">@color/primaryShow</item>
        <item name="colorPrimaryDark">@color/primaryDarkShow</item>
    </style>

    <style name="Theme.Movie" parent="Theme.Traktoid">
        <item name="colorPrimary">@color/primaryMovie</item>
        <item name="colorPrimaryDark">@color/primaryDarkMovie</item>
    </style>

    <style name="Theme.Transparent" parent="@style/Theme.Traktoid">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>